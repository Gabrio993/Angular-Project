{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true, // Cambiato a true per abilitare le dichiarazioni
    "experimentalDecorators": true,
    "moduleResolution": "node", // Cambiato da bundler a node per compatibilit√† con Compodoc
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom"]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "include": ["src/**/*.ts"], // Aggiunto per includere tutti i file sorgente
  "exclude": ["node_modules", "dist", "**/*.spec.ts"] // Aggiunto per escludere file non necessari
}
